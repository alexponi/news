<!DOCTYPE html>
<html>
  <head>
  <title>News</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="container">
      <%= render "layouts/header" %>
        <div class="row">
          <div class="span1"></div>
          <div class="span10">
            <% flash.each do |name, msg| %>
              <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
                <a class="close" data-dismiss="alert">Ã—</a>
                <%= msg %>
              </div>
            <% end %> 
          </div>  
          <div class="span1"></div>
        </div>
      </div>
  

          
        
    

      <div class="container">
        <div class="row">
          <div class="span1"></div>
          <div class="span10">
            <%= yield %>
          </div>  
          <div class="span1"></div>
        </div>  
      </div>
    </body>
  </html>

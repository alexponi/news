

  <h4>All posts</h4>

  <div class="row">
        <div class="span5">
          <p><%= will_paginate @posts %></p>
        </div>
        <div class="span5">
          <br><p>
            <a href="main/index?rating=1">Sort by rating and date</a>&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;
            <a href="<%= root_path %>?rating=2">Sort by date desc</a>
            &nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;
            <a href="<%= root_path %>">Sort by date asc</a>
          </p>
        </div>
      </div>

  
  <div class="accordion" id="accordion1">
    <% @posts.each do |post| %>
    <div class="accordion-group">
      <div class="accordion-heading">
        <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion1" href="#collapse<%= post.id %>">
        <%= post.title %>
        </a>
      </div>
      <div id="collapse<%= post.id %>" class="accordion-body collapse">
        <div class="accordion-inner">
          <div align="left">
            <p><%= post.created_at %></p>
            <p id='rate<%= post.id %>'>Рейтинг: <%= post.vote %>
            <% if current_user != nil %>
              <% if Vote.where(user_id: current_user.id, post_id: post.id).first == nil %>
                
                <%= hidden_div_if(post.vote > 0, id: 'knop + #{post.id}') do %>
                  <%= button_to 'Vote', votes_path(user_id: current_user, post_id: post), :class => 'btn btn-info', remote: true  %>
                <% end %>

              <% end %>
            <% elsif cookies[:email] != nil%>
              <% if Vote.where(user_id: @user_cook, post_id: post.id).first == nil %>
                

                <%= hidden_div_if(post.vote > 0, id: 'knop + #{post.id}') do %>
                  <%= button_to 'Vote', votes_path(user_id: current_user, post_id: post), :class => 'btn btn-info', :onklick => 'hide', remote: true  %>
                <% end %>

              <% end %>  
            <% else %>      
            <% end %>
            </p>
          </div>
          <%= post.message %>
          <div align="right">
            <p><%= User.find(post.user_id).email %></p>
            
            
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <div>
    <p><%= will_paginate @posts %></p>
  </div>

 
  